{
  "name": "tasklit",
  "version": "1.0.0",
  "description": "A lightweight web app with to-do list and eBook library features",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "client": "cd client && npm start",
    "build": "node build.js",
    "install-client": "cd client && npm install",
    "heroku-postbuild": "npm run build",
    "vercel-build": "npm run build",
    "postinstall": "npm run install-client"
  },
  "keywords": ["todo", "ebook", "react", "nodejs"],
  "author": "TaskLit Team",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "body-parser": "^1.20.2",
    "fs-extra": "^11.1.1"
  },
  "devDependencies": {
    "nodemon": "^3.0.1"
  }
}
